@model CarRentingSystemMVC.Data.Models.Reports

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View Reports</h1>
<hr />
<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create text-white">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!-- RentalHistoryId: Được truyền vào từ URL -->
                <div class="form-group">
                    <label asp-for="RentalHistoryId" class="control-label"></label>
                    <input asp-for="RentalHistoryId" class="form-control" readonly />
                    <span asp-validation-for="RentalHistoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
<style>
    body {
        color: #fff;
    }
</style>
