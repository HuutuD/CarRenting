@model List<CarRentingSystemMVC.Data.Models.RentalHistory>

<h2>Rental History</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Car Brand</th>
            <th>Car Model</th>
            <th>Days</th>
            <th>Total Price</th>
            <th>Address</th>
            <th>Expiration Date</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.FirstName</td>
                <td>@rental.LastName</td>
                <td>@rental.CarBrand</td>
                <td>@rental.CarModel</td>
                <td>@rental.Days</td>
                <td>@rental.TotalPrice</td>
                <td>@rental.Address</td>
                <td>@rental.ExpirationDate</td>
                <td>
                    <a>Reports</a>
                </td>
            </tr>
        }
    </tbody>
</table>
