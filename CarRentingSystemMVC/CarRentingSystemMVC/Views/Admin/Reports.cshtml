@{
    ViewData["Title"] = "View Reports";
}

<div class="container mt-5">
    <h1 class="text-center">Reports</h1>
    <table class="table table-hover table-dark mt-4">
        <thead>
            <tr>
                <th>#</th>
                <th>Report Title</th>
                <th>Description</th>
                <th>Submitted By</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model.Reports)
            {
                <tr>
                    <td>@report.Id</td>
                    <td>@report.Title</td>
                    <td>@report.Description</td>
                    <td>@report.SubmittedBy</td>
                    <td>@report.SubmissionDate.ToString("MM/dd/yyyy")</td>
                    <td>@report.Status</td>
                    <td>
                        <a asp-controller="Admin" asp-action="ViewReport" asp-route-id="@report.Id" class="btn btn-sm btn-info">View</a>
                        <a asp-controller="Admin" asp-action="ResolveReport" asp-route-id="@report.Id" class="btn btn-sm btn-success">Resolve</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
